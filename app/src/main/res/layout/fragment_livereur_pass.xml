<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Partie gauche : champ identifiant et boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Saisez votre pass"
            android:textColor="#0726D5"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:textSize="60sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextIdentifiant"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="300dp"
            android:focusable="false"
            android:background="@drawable/input_backgorund1"
            android:inputType="text"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <!-- Partie droite : clavier -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
       >
        <!-- Les touches seront ajoutÃ©es dynamiquement -->
    </com.google.android.flexbox.FlexboxLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="#FFC107"
            android:text="Annuler"
            android:textAllCaps="false"
            android:textColor="#0726D5"
            android:textSize="40sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="#FFC107"
            android:text="Suivant"
            android:textAllCaps="false"
            android:textColor="#0726D5"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
